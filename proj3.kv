<Gerenciador>:
    Menu:
        name:'Menu'
    Apresentacao:
        name:"Apresentacao"
    Cardapio:
        name: "Cardapio"
    Pagamento:
        name:"Pagamento"

<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding: 70
        spacing: 10
        Image: 
            source: 'CervejariaTT.jpg'
            size_hint_y: None
            height: 300
            allow_stretch: True
        Button:
            size_hint: .4, 1
            pos_hint:{'x': .3}
            text:'CARDAPIO'
            on_release:
                app.root.current= 'Cardapio'

        Button:
            size_hint: .4, 1
            pos_hint:{'x': .3}
            text:'Sair'
            on_release: app.stop()
<Cardapio>:
    BoxLayout:
        orientation:'vertical'
        padding: 60
        spacing: 10
        Image: 
            source: 'buffet.jpg'
            size_hint_y: None
            height: 240
            width: 300
            allow_stretch: True
        Button:
            size_hint: .4, 1
            pos_hint:{'x': .3}
            text:'Buffet'
            on_release:
                app.root.current= 'Buffet'
        Image: 
            source: 'Bar.jpg'
            size_hint_y: None
            height: 240
            allow_stretch: True
        Button:
            size_hint: .4, 1
            pos_hint:{'x': .3}
            text:'Bar'
            on_release:
                app.root.current= 'Apresentacao'
<Apresentacao>:
    GridLayout:
        cols:4
        spacing:10
        padding:10   

        Label:
            text: "Stout Beer"
            font_size: 20
            color:(0,1,1,1)
            id:lb1
        CheckBox:
            on_active: root.on_checkbox_Active1(self,self.active)
        Label:
            text: "R$ 19,90"
            font_size: 20
            color:(0,1,1,1)
            id:lbpreco1
        Image:
            source:'stout2.jpg'
            size_hint_y: None
            height:100
            allow_stretch: True

        Label:
            text: "IPA Beer"
            font_size: 20
            color:(0,1,1,1)
            id:lb2
        CheckBox:
            on_active: root.on_checkbox_Active2(self,self.active)
        Label:
            text: "R$ 14,90"
            font_size: 20
            color:(0,1,1,1)
            id:lbpreco2
        Image:
            source:'ipa1.jpg'
            size_hint_y: None
            height:100
            allow_stretch: True

        Label:
            text: "Weiss Beer"
            font_size: 20
            color:(0,1,1,1)
            id:lb3
        CheckBox:
            on_active: root.on_checkbox_Active3(self,self.active)
        Label:
            text: "R$ 17,90"
            font_size: 20
            color:(0,1,1,1)
            id:lbpreco3
        Image:
            source:'weiss1.jpg'
            size_hint_y: None
            height:100
            allow_stretch: True

        Label:
            text: "Porter Beer"
            font_size: 20
            color:(0,1,1,1)
            id:lb4
        CheckBox:
            on_active: root.on_checkbox_Active4(self,self.active)
        Label:
            text: "R$ 22,90"
            font_size: 20
            color:(0,1,1,1)
            id:lbpreco4
        Image:
            source:'porter1.jpg'
            size_hint_y: None
            height:100
            allow_stretch: True


        Button:
            text:'Voltar'
            font_size: 25
            size_hint_x: .5
            size_hint_y: .5
            width: 50
            on_release: app.root.current = 'Menu'
        Label:
            text: "Total Selecionado"
            font_size: 20
            color:(0,1,1,1)
            id:lb4
        Label:
            text: ""
        Button:
            text:'Proximo'
            font_size: 25
            size_hint_x: .5
            size_hint_y: .5
            width: 50
            on_release: app.root.current = 'Cardapio'
                  
<Pagamento>:

    GridLayout:
        cols:3
        spacing:10
        padding:15   
    
        Label:
            text:' '    
        Image:
            source:'molson.jpg'
            size_hint_y: None
            height:200
            allow_stretch: True
        Label:
            text:' '

        Label:
            text:' '
        Label:
            id: escolha
            text:'Selecione modo de pagamento:'
        Spinner:
            id:spn
            text: 'Opções'
            height:50
            values: ['Cartão de Crédito', 'Boleto', 'Tranferência / Pix']
            on_text: root.spinner_Clicado(self.text)

        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text:'Adicionar'
                size_hint_x: None
                width: 70
                on_release: root.addComponentes()
            TextInput:
                id: tarefa
                font_size: 20
                background_color: (.25, .25, 1, 1)
                text:'R$ '


        Label:
            text:' '        
        Label:
            text:' '        
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None #quando coloca o componente na caixa faz com que eles nao tem tamanho fixo
                height: self.minimum_height

        Label:
            text:' '
        Button:
            text:'Voltar'
            size_hint_y: None
            font_size: 25
            on_release: app.root.current = 'Menu'

<Funcoes>:
    size_hint_y: None
    height: 80
    Label:
        id:lab1
    Button:
        text: 'X'
        size_hint_y: None
        width: 40
        on_release:
            app.root.get_screen('Pagamento').ids.box.remove_widget(root) 